[user]
	name = Yassen Bantchev
	email = yassenb@gmail.com
[diff]
	tool = meld
[merge]
	tool = meld
[alias]
    co = checkout
    cob = "!bash -c 'git checkout -b $0 && git config --add \"branch.$0.remote\" origin && git config --add \"branch.$0.merge\" \"refs/heads/$0\"'"
    ci = commit
    st = status
    dy = difftool -y
    dyc = difftool -y --cached
    br = branch
    puff = pull --ff-only
[log]
    date = iso
[format]
    pretty = %Cblue%h%Creset %an %Cgreen%ad%Creset%d%n%B
[color]
    status = auto
[core]
	excludesfile = ~/.gitignore
[push]
	default = simple
[pull]
	rebase = true
